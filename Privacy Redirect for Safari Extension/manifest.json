{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.1.1",
  "manifest_version": 2,
  "background": {
    "page": "pages/background/background.html",
    "persistent": true
  },
  "default_locale": "en",
  "icons": {
    "16": "assets/images/icon16.png",
    "32": "assets/images/icon32.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "permissions": ["storage", "<all_urls>"],
  "browser_action": {
    "default_title": "Privacy Redirect for Safari",
    "default_popup": "pages/popup/popup.html",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "32": "assets/images/icon32.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://www.twitter.com/*",
        "*://mobile.twitter.com/*",
        "*://pbs.twimg.com/*",
        "*://video.twimg.com/*"
      ],
      "js": ["assets/javascripts/twitter.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://www.reddit.com/*",
        "*://np.reddit.com/*",
        "*://new.reddit.com/*",
        "*://amp.reddit.com/*",
        "*://i.redd.it/*"
      ],
      "js": ["assets/javascripts/reddit.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "pages/options/options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": ["assets/javascripts/helpers/*"]
}
